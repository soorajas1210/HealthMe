<%- include("../partials/adminHeader") -%>

<%- include("../partials/adminSidebar") -%>

<div class="page-wrapper">

  <div class="page-breadcrumb">
    <div class="row align-items-center">
      <div class="col-5">
        <h4 class="page-title">Edit Product</h4>

      </div>

    </div>
  </div>

  <div class="container-fluid">


    <div class="col-lg-8 col-xlg-9 col-md-7">
      <div class="card">
        <div class="card-body">
          <form action="/admin/editproduct?id=<%= product._id %>" method="post" class="form-horizontal form-material mx-2" enctype="multipart/form-data">
            <div class="form-group">
              <label class="col-md-12">Product Name</label>
              <div class="col-md-12">
                <input type="text" name="name" class="form-control form-control-line" value="<%= product.productname %>" required>
              </div>
            </div>
            <div class="form-group">
              <label for="example-email" class="col-md-12">Price</label>
              <div class="col-md-12">
                <input type="number" placeholder="Enter Price" class="form-control form-control-line" name="price" id="example-price" value="<%= product.price %>" required>
              </div>
            </div>
            <div class="form-group">
              <label class="col-md-12">Rating (MAX-5)</label>
              <div class="col-md-12">
                <input type="number" placeholder="Rate here" name="rating" class="form-control form-control-line" max="5" value="<%= product.rating %>" required>
              </div>

              <div class="form-group">
                <label class="col-md-12">Image</label>
                <div class="col-md-12">
                  <input type="file" placeholder="" name="image">
                </div>
              </div>
              <div class="form-group">
                <label for="example-email" class="col-md-12">Quantity</label>
                <div class="col-md-12">
                  <input type="number" placeholder="Enter the Quantity" class="form-control form-control-line" name="quantity" value="<%= product.quantity%>">
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-12">Description</label>
                <div class="col-md-12">
                  <input type="text" name="pdescription" rows="5" class="form-control form-control-line" value="<%= product.pdescription %>" required></input>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-12">Category</label>
                <div class="col-sm-12">
                  <select class="form-select shadow-none form-control-line" type="text" name="category" value="<%= product.category %>">
                    <% if( cat.length > 0){ %>
                    <%   for(let i = 1;i <= cat.length; i++){ %>

                    <option>
                      <%= cat[i-1].category %>
                    </option>


                    <% } } else{ %>
                    <tr>
                      <td colspan="5">Default</td>
                    </tr>
                    <% } %>
                  </select>

                </div>
              </div>
              <div class="form-group">
                <label class="col-md-12">Information</label>
                <div class="col-md-12">
                  <input type="text" name="information" placeholder="Information" class="form-control form-control-line" value="<%= product.information %>">
                </div>



              </div>




              <div class="col-sm-12">
                <input type="hidden" name="id" value="<%= product._id %> ">
                <button class="btn btn-success text-white" type="submit">update Products</button>
              </div>
            </div>


          </form>

        </div>
      </div>
    </div>

  </div>
  <!-- ============================================================== -->
  <!-- End Container fluid  -->

  <!-- footer -->
  <!-- ============================================================== -->

  <%- include("../partials/admin-footer.ejs") -%>