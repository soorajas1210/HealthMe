<%- include("../partials/adminHeader") -%>

<%- include("../partials/adminSidebar") -%>

<div class="page-wrapper">

  <div class="page-breadcrumb">
    <div class="row align-items-center">
      <div class="col-5">
        <h4 class="page-title">Add banner</h4>

      </div>

    </div>
  </div>

  <div class="container-fluid">

    <div class="col-lg-8 col-xlg-9 col-md-7">
      <div class="card">
        <div class="card-body">
          <form action="/admin/add-banner" method="post" class="form-horizontal form-material mx-2" enctype="multipart/form-data">
            <div class="form-group">
              <label class="col-md-12"></label>
              <div class="col-md-12">
                <input type="text" name="title" placeholder="Title" class="form-control form-control-line" required>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-12">Images</label>
              <div class="col-md-12">
                <input type="file" placeholder="" name="image" required>
              </div>
            </div>

        </div>

        <div class="form-group">
          <div class="col-sm-12">
            <button class="btn btn-success text-white" type="submit">Add Banner</button>
          </div>
        </div>


        </form>
        <%
              if(typeof message !== 'undefined') {
                %>
        <p style="color:red"><%= message %></p>
        <%
              }
                %>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Banner List</h4>
              <!-- <h6 class="card-subtitle">Add <code>.table-hover</code> to enable a hover state on table
                                    rows within a <code>&lt;tbody&gt;</code>.</h6> -->
            </div>
            <div class="table-responsive">
              <table class="table table-hover ">
                <thead>
                  <tr>
                    <th>Sl.No</th>
                    <th>
                      Title
                    </th>

                    <th>
                      Image
                    </th>


                  </tr>
                </thead>


                <tbody>
                  <% if( banner.length >= 0){ %>
                  <%   for(let i = 1;i <= banner.length; i++){ %>
                  <tr>
                    <td>
                      <%= i %>
                    </td>

                    <td>
                      <div class="d-flex align-items-center">

                        <div class="">
                          <h4 class="m-b-0 font-16">
                            <%= banner[i-1].title %>

                          </h4>
                        </div>
                      </div>
                    </td>


                    <td>
                      <% if(banner[i-1].image) { %>
                      <img src="./productsImage/<%= banner[i-1].image %>" alt="image" width="100vw" height="100vh">
                      <% }else{ %>
                      Image Not Found
                      <% } %>
                    </td>



                    <td>


                      <br>

                      <a class="btn btn-sm btn-outline-danger" href="/admin/delete-banner?id=<%= banner[i-1]._id %>">Delete</a>

                    </td>


                  </tr>
                  <% } } else{ %>
                  <tr>
                    <td colspan="5">Products Not Found</td>
                  </tr>
                  <% } %>



                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>



