<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb">
    <div class="row align-items-center">
      <div class="col-5">
        <h4 class="page-title">Category Management</h4>
        <!-- <div class="d-flex align-items-center">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                                </ol>
                            </nav>
                        </div> -->
      </div>
      <div class="col-7">
      </div>
      <div class="nk-accordion" id="accordion-1" role="tablist" aria-multiselectable="true">
        <div class="panel panel-default btn btn-secondary text-white">
          <div class="panel-heading text-center " role="tab" id="accordion-1-1-heading">
            <a class="collapsed" data-toggle="collapse" data-parent="#accordion-1" href="#accordion-1-1" aria-expanded="true" aria-controls="accordion-1-1" style="color:white ;">
              Add Category <span class="panel-heading-arrow fa fa-angle-down text-white"></span>
            </a>
          </div>

          <div id="accordion-1-1" class="panel-collapse collapse" role="tabpanel" aria-labelledby="accordion-1-1-heading">
            <form action="/admin/admin-category" method="post">
              <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="d-flex flex-row align-items-center mb-4">
                  <div class="form-outline flex-fill mb-0">
                    <label class="form-label" for="form3Example3c">Enter New Category</label>
                    <input type="text" id="form3Example3c" class="form-control" name="category" required />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" value="Register" class="btn btn-secondary btn-lg">Submit</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ============================================================== -->
  <!-- End Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <!-- ============================================================== -->
  <!-- Container fluid  -->
  <!-- ============================================================== -->
  <div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <!-- <h6 class="card-subtitle">Add <code>.table-hover</code> to enable a hover state on table
                                    rows within a <code>&lt;tbody&gt;</code>.</h6> -->
          </div>
        </div>
      </div>
    </div>

    <div class="table-responsive upgrade-btn">
      <table class="table v-middle table-hover ">
        <thead>
          <tr class="bg-light">
            <th class="border-top-0">SI NO</th>
            <th class="border-top-0">CATEGORIES</th>
            <th class="border-top-0">ACTION</th>
          </tr>
        </thead>
        <tbody>
          <% if( categ.length > 0){ %>
          <%   for(let i = 1;i <= categ.length; i++){ %>
          <tr>
            <td>
              <%= i %>
            </td>
            <td>
              <%= categ[i-1].category%>
            </td>
            <td>
              <a href="/admin/admin-delete-category?id=<%= categ[i-1]._id %>" class="btn btn-sm btn-outline-danger mb-1"> Delete </a>
            </td>

          </tr>
          <% } } else{ %>
          <tr>
            <td colspan="5">No categories found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>


    <!-- ============================================================== -->
    <!-- End PAge Content -->
